%h1 Git Heroes

- flash.each do |key, value|
  %p #{key}: #{value}

%hr/

- if current_user
  %p Logged in as @#{current_user.login}.
  = link_to 'Log out', session_path, method: :delete
- else
  %p Logged out.
  = link_to 'Log in', new_session_path

- if @jobs
  %section
    %h3 Running jobs
    - @jobs.each do |job|
      %p #{job.job_class}: #{job.status}
